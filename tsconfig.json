{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "src",
    "sourceMap": true,
    "target": "ESNext",
    "lib": [
      // if it'll be running on web, uncomment the line below
      // "dom",
      "esnext"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  }
}
